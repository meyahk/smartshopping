@model IEnumerable<SmartShopping.DB.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { @class="btn btn-success"})
    @*<a class="btn btn-success" href="/Products/Create">Create New</a>*@
</p>
<table class="table product-adjustment">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th class="product-des mobile-hidden">
            @Html.DisplayNameFor(model => model.product_des)
        </th>
        <th class="price mobile-hidden">
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td class="product-des mobile-hidden">
            @Html.DisplayFor(modelItem => item.product_des)
        </td>
        <td class="price mobile-hidden">
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td class="button-section">
            @Html.ActionLink("Edit", "Edit", new { id=item.product_id }, new { @class= "fa fa-edit fa-lg green" }) |
            @Html.ActionLink("Details", "Details", new { id=item.product_id }, new {  @class= "fa fa-file-o fa-lg grey" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.product_id }, new { @class= "fa fa-remove fa-lg red" })
        </td>
    </tr>
}

</table>
